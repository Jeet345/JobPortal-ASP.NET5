@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - JobPortal</title>

    <link href="~/toastr.js/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />

</head>
<body>
    <header>
        <div class="header">
            <div class="header-menu">
                <ul class="logo">
                    <a href="/">
                        <h1>
                            <span>Clear</span><span>Career</span>
                        </h1>
                    </a>
                </ul>
                <ul class="menu">
                    <li><a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" href="/Employer">Home</a></li>
                    <li><a class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllJobs" ? "active" : "")" href="/Employer/AllJobs">Jobs</a></li>
                    <li><a class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")" href="/Employer/About">About</a></li>
                    <li><a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")" href="/Employer/Contact">Contact</a></li>
                </ul>

                <ul class="account">
                    @if (Context.Session.GetString("userEmail") == null)
                    {
                        <li>
                            <a href="/Login">Login</a>
                        </li>
                        <li>
                            <a href="/Signup">SignUp</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="/Logout">Logout</a>
                        </li>
                        <li>
                            <a href="/Employer/Account">
                                <i class="fas fa-user"></i>
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer>
        <div class="footer">

            <div class="container">

                <div class="col-1">

                    <div class="logo">
                        <a href="">
                            <h1>
                                <span>Clear</span><span>Career</span>
                            </h1>
                        </a>
                    </div>
                    <p class="desc">
                        Lorem Ipsum Is Simply Dummy Text Of The Printing And Typesetting Industry Has Been The Industry's
                        Standard Dummy Text Ever Since The.
                    </p>
                    <form class="subscribe-box" method="post">
                        <input type="text" placeholder="Your Email Address" name="email" />
                        <button type="submit">Subscribe</button>
                    </form>
                    <ul class="social-icon">
                        <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href=""><i class="fab fa-linkedin-in"></i></a></li>
                        <li><a href=""><i class="fab fa-instagram"></i></a></li>
                        <li><a href=""><i class="fab fa-twitter"></i></a></li>
                    </ul>
                </div>

                <div class="col-2">
                    <h2 class="title">Popular Categories</h2>

                    <div class="category-container">
                        <ul>
                            <li>
                                <a href="">
                                    <span><i class="fal fa-minus"></i></span>
                                    Category Name
                                </a>
                            </li>
