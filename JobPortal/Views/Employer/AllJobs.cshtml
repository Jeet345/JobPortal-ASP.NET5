@model IEnumerable<JobPortal.Models.Job>

@{
    ViewData["Title"] = "All Jobs";
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
}

<div class="search-header">

    <div class="container">

        <div class="box" style="text-align: center">
            <!--            <form class="inputs" method="post">
                            <input type="text" placeholder="Job Title" name="jobName"/>
                            <input type="text" placeholder="City or location" name="city"/>
                            <button type="submit">Search</button>
                        </form>-->

            <h1 class="title">Jobs</h1>

            <h3 class="nav">
                <a href="/JobRest">Home</a>
                <span class="icon"><i class="fas fa-angle-right"></i></span>
                <span>Jobs</span>
            </h3>

        </div>

    </div>

</div>

<div class="job-all-container">

    <h1 class="title">@Model.Count() JOBS FOUND</h1>

    <div class="job-list-container">


        @foreach (var item in Model)
        {
            <div class="job-box">
                <div class="col-1">
                    <div class="desc">
                        <a href="JobDetail/@item.Id" class="job-title">@item.JobTitle</a>
                        <h4 class="row-2">
                            <a href="">
                                <span class="icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </span>
                                @item.JobLocation
                            </a>
                            <a href="">
                                <span class="icon">
                                    <i class="far fa-bookmark"></i>
                                </span>
                                @item.JobType
                            </a>
                            <a href="">
                                <span class="icon">
                                    <i class="far fa-clock"></i>
                                </span>
                                Published on @item.JobPostingDate
                            </a>
                        </h4>
                    </div>
                    <a href="#" class="fav-btn">
                        <i class="fal fa-heart"></i>
                    </a>
                </div>

                <div class="col-2">
                    <h4 class="job-type">
                        @item.JobType
                    </h4>
                    <h2 class="salary">
                        @item.JobSalary
                        &#8377;
                    </h2>
                </div>
            </div>

        }


    </div>

</div>
